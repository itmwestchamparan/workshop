    <!-- Firebase SDKs -->
    <script type="module">
        // Import necessary functions from Firebase SDKs
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, onAuthStateChanged, signInWithCustomToken } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, onSnapshot, setDoc, increment, serverTimestamp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // --- Firebase Configuration ---
        // These variables are provided by the environment. Do not change them.
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'social-hub-page';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : { apiKey: "DEMO", authDomain: "DEMO", projectId: "DEMO" };

        // Initialize Firebase
        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);

        // --- Hit Counter Logic ---
        const counterDocRef = doc(db, `/artifacts/${appId}/public/data/siteMetrics/pageCounter`);
        const counterElement = document.getElementById('hit-counter');
        const counterContainer = document.getElementById('hit-counter-container');
        
        // This flag prevents incrementing the counter multiple times for a single visit
        let hasIncremented = false;

        // Function to increment the counter
        const incrementCounter = async () => {
            if (hasIncremented) return;
            hasIncremented = true;
            try {
                // Atomically increments the 'hits' field.
                // Creates the document if it doesn't exist.
                await setDoc(counterDocRef, { 
                    hits: increment(1),
                    lastUpdated: serverTimestamp() 
                }, { merge: true });
            } catch (error) {
                console.error("Error incrementing counter:", error);
            }
        };

        // --- Authentication and Initialization ---
        onAuthStateChanged(auth, (user) => {
            if (user) {
                // User is signed in.
                console.log("User authenticated:", user.uid);
                
                // 1. Listen for real-time updates on the counter
                onSnapshot(counterDocRef, (doc) => {
                    if (doc.exists()) {
                        const data = doc.data();
                        counterElement.textContent = data.hits.toLocaleString();
                    } else {
                        counterElement.textContent = '1'; // Display 1 on first ever visit
                    }
                    // Make the counter visible after the first data load
                    counterContainer.style.opacity = '1';
                }, (error) => {
                    console.error("Error getting counter document:", error);
                    counterElement.textContent = 'N/A';
                    counterContainer.style.opacity = '1';
                });

                // 2. Increment the counter for this visit
                incrementCounter();

            } else {
                // User is signed out.
                console.log("User not authenticated. Attempting to sign in.");
            }
        });

        // Sign in logic
        (async () => {
            try {
                if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                    console.log("Signing in with custom token.");
                    await signInWithCustomToken(auth, __initial_auth_token);
                } else {
                    console.log("Signing in anonymously.");
                    await signInAnonymously(auth);
                }
            } catch (error) {
                console.error("Authentication failed:", error);
                // Still try to show the counter, but don't increment
                 onSnapshot(counterDocRef, (doc) => {
                    if (doc.exists()) counterElement.textContent = doc.data().hits.toLocaleString();
                    else counterElement.textContent = '0';
                    counterContainer.style.opacity = '1';
                });
            }
        })();

    </script>
